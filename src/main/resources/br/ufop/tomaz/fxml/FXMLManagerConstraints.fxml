<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane
        prefHeight="400.0"
        prefWidth="600.0"
        stylesheets="@../styles/screensMainStyle.css"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="br.ufop.tomaz.controller.FXMLManagerConstraintsController"
>
    <top>
        <VBox prefHeight="100.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_RIGHT">
                <MenuBar fx:id="menubar" maxWidth="1.7976931348623157E308" prefWidth="776.0" HBox.hgrow="ALWAYS">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Edit">
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </Menu>
                </MenuBar>
                <Button fx:id="btnClose" alignment="CENTER_RIGHT" mnemonicParsing="false" styleClass="closeButton"
                        text="X" onAction="#close"/>
            </HBox>
            <Label maxWidth="1.7976931348623157E308" styleClass="screen-label" text="CONSTRAINTS" />
        </VBox>
    </top>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="buttonBar" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="btnAdd" mnemonicParsing="false" styleClass="button-buttonBar" text="Add" />
                <Button fx:id="btnEdit" mnemonicParsing="false" styleClass="button-buttonBar" text="Edit" />
                <Button fx:id="btnDelete" mnemonicParsing="false" styleClass="button-buttonBar" text="Delete" />
                <Button fx:id="btnImport" mnemonicParsing="false" styleClass="button-buttonBar" text="Import" />
            </buttons>
            <padding>
                <Insets right="10.0" />
            </padding>
        </ButtonBar>
    </bottom>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <VBox prefHeight="98.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                    <Label text="Filters"/>
                    <GridPane hgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="367.0" minWidth="10.0"
                                               prefWidth="160.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="359.0" minWidth="10.0"
                                               prefWidth="160.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="617.0" minWidth="10.0"
                                               prefWidth="380.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="622.0" minWidth="10.0" prefWidth="76.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Applie To"/>
                        <Label text="Name/Subject" GridPane.columnIndex="2"/>
                        <Label text="Type" GridPane.columnIndex="1"/>
                        <Button fx:id="btnNoFilters" mnemonicParsing="false" text="No Filters"
                                GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cmbApplieTo" prefWidth="150.0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cmbType" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cmbNameSubject" prefHeight="25.0" prefWidth="374.0"
                                  GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>
            </top>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <left>
                <ListView fx:id="constraintsListView" prefHeight="312.0" prefWidth="340.0" BorderPane.alignment="CENTER" />
            </left>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
                    <Label text="Constraint Details"/>
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="232.0" minWidth="10.0" prefWidth="61.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="401.0" minWidth="10.0"
                                               prefWidth="369.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Type"/>
                        <Label text="Weight" GridPane.rowIndex="2"/>
                        <Label text="Applie To" GridPane.rowIndex="1"/>
                        <TextField fx:id="edtType" prefWidth="370.0" GridPane.columnIndex="1"/>
                        <TextField fx:id="edtApplieTo" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="edtWeight" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                    <Label text="Additional Info"/>
                    <TextArea fx:id="edtAdditionalInfo" prefHeight="165.0" prefWidth="430.0"/>
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                </VBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>
